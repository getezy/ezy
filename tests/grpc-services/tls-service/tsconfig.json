{
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
}
