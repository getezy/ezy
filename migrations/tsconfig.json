{
  "compilerOptions": {
    "allowJs": false,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "esnext"
    ],
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": ["src/**/*", "knexfile.ts"],
}
