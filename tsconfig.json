{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "esnext"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@components": [
        "./src/app/components/index.ts"
      ],
      "@storage": [
        "./src/app/storage/index.ts"
      ],
    },
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
  },
  "include": ["src/**/*", "stories", "forge.config.js"],
}
